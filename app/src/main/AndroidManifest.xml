<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permissions -->
    <!-- Contacts Permission -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    
  <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    
    <!-- Internet & Accessibility -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"
        tools:ignore="ProtectedPermissions" />
    
    <!-- Overlay Permission -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Queries for WhatsApp packages -->
    <queries>
        <package android:name="com.whatsapp" />
        <package android:name="com.whatsapp.w4b" />
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BulksendTest">
       
        <activity
            android:name=".bulksend.sheetscampaign.SheetsendActivity"
            android:exported="false" />
        <activity
            android:name=".bulksend.textmedia.TextmediaActivity"
            android:exported="false" />
        <activity
            android:name=".bulksend.textcamp.BulktextActivity"
            android:exported="false" /> <!-- Main Launcher Activity -->
        <activity
            android:name=".auth.AuthActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BulksendTest">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Other Activities -->
        <activity
            android:name=".support.WebViewActivity"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".auth.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".auth.UserPreferencesActivity"
            android:exported="false" />
        <activity
            android:name=".admin.AdminActivity"
            android:exported="false" />

        <activity
            android:name=".support.SupportActivity"
            android:exported="false" />
        <activity
            android:name=".anylatic.ReportlistActivity"
            android:exported="false" />
        <activity
            android:name=".anylatic.MessagereportActivity"
            android:exported="false" />
        <activity
            android:name=".contactmanager.ContactzActivity"
            android:exported="false" />
        <activity
            android:name=".templates.TemplateActivity"
            android:exported="false" />
        <activity
            android:name=".templates.CreateTemplateActivity"
            android:exported="false" />
        <activity
            android:name=".bulksend.SelectActivity"
            android:exported="false" />
        <activity
            android:name=".contactmanager.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".bulksend.BulksendActivity"
            android:exported="false" />
        <activity
            android:name=".bulksend.CampaignStatusActivity"
            android:exported="false" />
        <activity
            android:name=".tutorial.FaqActivity"
            android:exported="false" /> <!-- Accessibility Service -->
        <service
            android:name=".bulksend.WhatsAppAutoSendService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
        
        <!-- Overlay Service -->
        <service
            android:name=".overlay.OverlayService"
            android:exported="false" />
    </application>

</manifest>